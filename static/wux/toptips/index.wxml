<wux-animation-group wux-class="{{ classes.wrap }}" in="{{ in }}" classNames="{{ classNames }}">
    <view class="{{ classes.content }}">
        <text>{{ text }}</text>
        <icon wx:if="{{ icon && !hidden }}" class="{{ classes.icon }}" type="{{ icon }}" size="24" color="#fff" />
    </view>
</wux-animation-group>
